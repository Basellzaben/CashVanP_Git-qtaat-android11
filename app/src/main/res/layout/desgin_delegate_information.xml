<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RR"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:weightSum="11.6">

    <Methdes.MyTextView
        android:id="@+id/manNo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="اسم العميل"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />
    <Methdes.MyTextView
        android:id="@+id/Man_Name"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.8"
        android:gravity="center"
        android:text="المبلغ-شيك"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />
    <Methdes.MyTextView
        android:id="@+id/CheckIn"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.3"
        android:gravity="center"
        android:text="16/05/2020 "
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />
    <Methdes.MyTextView
        android:id="@+id/checkOut"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.3"
        android:gravity="center"

        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="14sp" />


    <Methdes.MyTextView
        android:id="@+id/Payemnt"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.1"
        android:gravity="center"
        android:text="المبلغ-شيك"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />

    <Methdes.MyTextView
        android:id="@+id/Sales"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.2"
        android:gravity="center"
        android:text="التاريخ "
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <Methdes.MyTextView
        android:id="@+id/returnsSales"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1.1"
        android:gravity="center"
        android:text="15:20"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />
    <Methdes.MyTextView
        android:id="@+id/SalesOrders"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />

    <Methdes.MyTextView
        android:id="@+id/Precent"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:text="التاريخ "
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="12sp" />






</LinearLayout>
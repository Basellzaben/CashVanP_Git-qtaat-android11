<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="2dp"
    android:weightSum="3"
    tools:context=".Reports.Report_Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.2"
        android:background="@color/blue123"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <Methdes.MyTextView
                    android:id="@+id/textView279"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="المندوب"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_Man"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:onClick="getMan"
                    android:text=" " />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="horizontal">

                <Methdes.MyTextView
                    android:id="@+id/ac"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="right"
                    android:text="العميل"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:onClick="showCust"
                    android:text=" " />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="horizontal">

                <Methdes.MyTextView
                    android:id="@+id/textVئiew279"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="right"
                    android:text="المنطقة"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ezditText5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:onClick="getCountry"
                    android:text=" " />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.59"
            android:orientation="horizontal"
            android:weightSum="2.3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:scaleType="fitXY"
                    android:src="@drawable/calender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_fromDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="01/01/2020" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgTo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/calender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_Todate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="01/01/2020" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal">


            <ListView
                android:id="@+id/LV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/receipt"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/blue123"
                android:layoutDirection="rtl"

                android:orientation="horizontal"

                android:visibility="gone"
                android:weightSum="9.3">

                <Methdes.MyTextView
                    android:id="@+id/OrderNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text="رقم القبض"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/Date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"

                    android:gravity="center"
                    android:text="تاريخ القبض"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"

                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/Amt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"

                    android:gravity="center"
                    android:text="مبلغ القبض "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"

                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/Cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="المبلغ النقدي"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:textColor="@color/White"

                    android:textSize="15sp" />


                <Methdes.MyTextView
                    android:id="@+id/CheckTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"

                    android:gravity="center"
                    android:text="مبلغ الشيكات"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"

                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/notes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="ملاحظات "

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/DelegateInformation"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/blue123"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="11.6">

                <Methdes.MyTextView
                    android:id="@+id/manNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text="رقم المندوب"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/Man_Name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text="اسم المندوب"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/CheckIn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="بداية دوام "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/checkOut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="نهاية دوام"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />


                <Methdes.MyTextView
                    android:id="@+id/Payemnt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="القبوضات"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/Sales"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="المبيعات "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />


                <Methdes.MyTextView
                    android:id="@+id/returnsSales"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="المرتجعات"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

                <Methdes.MyTextView
                    android:id="@+id/SalesOrders"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="طلبات البيع"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="11sp" />

                <Methdes.MyTextView
                    android:id="@+id/Precent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="النسبة "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:textSize="15sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/Data"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/blue123"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:orientation="horizontal">

                    <Methdes.MyTextView
                        android:id="@+id/ReportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/listView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/blue123"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="Do_Whatsapp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/Green"
                android:drawableStart="@drawable/iconwhatsapp"
                android:text="ارسال عبر واتس اب" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/Pink"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:text="ارسال عبر الايميل" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>